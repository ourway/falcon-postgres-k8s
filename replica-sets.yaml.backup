apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: webapp
spec:
  selector:
    matchLabels:
      label-name: webapp
  replicas: 3
  template:
    metadata:
      labels:
        label-name: webapp
        release: "0-5"
    spec:
      containers:
      - name: webapp
        image: richardchesterwood/k8s-fleetman-webapp-angular:release0-5


---
apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: queue
spec:
  selector:
    matchLabels:
      label-name: queue
  replicas: 1
  template:
    metadata:
      labels:
        label-name: queue
    spec:
      containers:
      - name: queue
        image: richardchesterwood/k8s-fleetman-queue:release1
